  <style>
    /* Container to hold buttons horizontally */
    .button-container {
      display: flex; /* Use flexbox to arrange buttons horizontally */
      gap: 10px; /* Add space between the buttons */
    }

    /* Style for buttons in the actions cell */
    .actions-cell button {
      width: 120px; /* Same width for both buttons */
      padding: 8px; /* Same padding for both */
      margin: 5px; /* Optional: Space between buttons */
      border: none; /* Remove border */
      border-radius: 5px; /* Optional: Rounded corners */
      cursor: pointer; /* Change cursor to pointer */
      text-align: center; /* Center text inside the button */
      font-size: 14px; /* Same font size */
    }

    /* Specific styles for the "View Details" button */
    .view-details-btn {
      background-color: #4caf50; /* Green for View Details */
      color: white; /* White text */
    }

    /* Specific styles for the "Delete" button */
    .delete-btn {
      background-color: #f44336; /* Red for Delete */
      color: white; /* White text */
    }

    /* Hover effects for buttons */
    button:hover {
      opacity: 0.8; /* Slightly fade the button on hover */
    }

    table tbody td {
      position: relative;
    }
    input[type="text"],
    input[type="number"],
    input[type="date"] {
      background-color: #ffffff;
      color: #000000;
      border: 1px solid #1976d2;
      border-radius: 5px;
      transition: background-color 0.3s, border-color 0.3s;
    }

    input[type="text"]:focus,
    input[type="number"]:focus,
    input[type="date"]:focus {
      outline: none;
    }

    input[type="text"]:active,
    input[type="number"]:active,
    input[type="date"]:active {
      background-color: #b3d9ff;
      border-color: #1976d2;
    }

    .editable:focus {
      outline: none;
      background-color: transparent !important;
      color: inherit;
    }

    table tbody td:hover::before {
      content: "";
      position: absolute;
      top: 0;
      left: 0;
      width: 5px;
      height: 100%;
      background-color: #007bff;
      border-radius: 0 5px 5px 0;
    }

    .table td[data-field="debit"] {
      background-color: #e0f7e0;
    }

    .table td[data-field="debit"]:not(:empty) {
      background-color: #ffebeb;
    }

    .table td[data-field="credit"] {
      background-color: #e0f9e0;
    }

    .table .total-row {
      font-weight: bold;
    }

    .table .total-row .debit-total {
      color: red;
    }

    .table .total-row .credit-total {
      color: green;
    }
